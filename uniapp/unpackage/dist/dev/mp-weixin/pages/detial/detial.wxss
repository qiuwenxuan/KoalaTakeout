.category-item {
	padding: 15rpx;
	background-color: #eee;
	border-bottom: 2rpx solid #fff;
}
/* 高亮商品分类样式 */
.category-active {
	background-color: #fff;
	color: orange;
	border-left: 5rpx solid orange;
}
.mini-btn {
	border: 2rpx solid orangered;
	padding: 0 4rpx;
	font-size: 22rpx;
	color: orangered;
	border-radius: 5rpx;
	font-weight: bold;
}
.mini-btn-fill {
	background-color: orange;
	padding: 0 4rpx;
	color: #fff;
	font-size: 24rpx;
	border-radius: 5rpx;
}
/* 白色卡片样式 */
.box {
	background-color: #fff;
	padding: 20rpx;
	border-radius: 10rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

